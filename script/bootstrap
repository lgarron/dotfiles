#!/usr/bin/env bash

set -euo pipefail

# For Codespaces
# https://docs.github.com/en/free-pro-team@latest/github/developing-online-with-codespaces/personalizing-codespaces-for-your-account

cd "$(dirname "$0")"

sudo apt-get install -y fish stow
make fish

function git-freeze-install {
  bin=${1}
  echo "Installing: ${bin}"
  curl -o "/tmp/${bin}" "https://raw.githubusercontent.com/lgarron/git-freeze/main/bin/${bin}"
  sudo cp "/tmp/${bin}" "/usr/bin/${bin}"
  sudo chmod +x "/usr/bin/${bin}"
}

git-freeze-install git-freeze
git-freeze-install git-thaw
git-freeze-install git-abandon
