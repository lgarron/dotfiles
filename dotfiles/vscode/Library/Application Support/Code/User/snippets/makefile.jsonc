{
  ".PHONY": {
    "prefix": ".PHONY",
    "body": [
      ".PHONY: $1",
      "$1:",
      "\t$0",
      ""
    ],
    "description": "Add a .PHONY target"
  },
  "deploy": {
    "prefix": "@cubing/deploy",
    "body": [
      ".PHOHY: deploy",
      "deploy: ${0:build}",
      "\tbun x -- bun-dx --package @cubing/deploy deploy --"
    ],
    "description": "Deploy using @cubing/deploy"
  },
  "setup (using `bun install`)": {
    "prefix": "setup",
    "body": [
      ".PHONY: setup",
      "setup:",
      "\tbun install --frozen-lockfile"
    ],
    "description": "Setup using `bun install`"
  },
  "lint (using `biome`)": {
    "prefix": "lint",
    "body": [
      ".PHONY: lint",
      "lint:",
      "\tbun x -- bun-dx --package @biomejs/biome biome -- check"
    ],
    "description": "Lint using `biome`"
  },
  "format (using `biome`)": {
    "prefix": "format",
    "body": [
      ".PHONY: format",
      "format:",
      "\tbun x -- bun-dx --package @biomejs/biome biome -- check --write"
    ],
    "description": "Format using `biome`"
  },
  "check": {
    "prefix": "check",
    "body": [
      ".PHONY: check",
      "check: lint test build check-package.json",
    ],
    "description": "`make check` using `make lint test build check-package.json`"
  },
  "check-package.json": {
    "prefix": "check-package.json",
    "body": [
      ".PHONY: check-package.json",
      "check-package.json: build",
      "\tbun x --package @cubing/dev-config package.json check",
    ],
    "description": "`bun x --package @cubing/dev-config package.json check`"
  },
  "clean": {
    "prefix": "clean",
    "body": [
      ".PHONY: clean",
      "clean:",
      "\t#rm -rf ./dist"
    ],
    "description": "clean (JS)"
  },
  "reset": {
    "prefix": "reset",
    "body": [
      ".PHONY: reset",
      "reset: clean",
      "\t#rm -rf ./node_modules ./target"
    ],
    "description": "reset"
  }
}
