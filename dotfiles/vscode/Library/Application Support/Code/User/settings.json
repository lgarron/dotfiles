{
  /******** Dynamic ********/
  "editor.formatOnSave": true,
  "window.zoomLevel": 2.75,
  /******** Main VSCode settings ********/
  "editor.formatOnPaste": false,
  "editor.tabSize": 2,
  "editor.renderWhitespace": "boundary",
  "editor.formatOnType": false,
  "editor.columnSelection": false,
  "editor.inlineSuggest.enabled": true,
  "editor.suggest.showStatusBar": true,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "files.insertFinalNewline": true,
  "explorer.fileNesting.enabled": true,
  "explorer.confirmDragAndDrop": false,
  "editor.guides.bracketPairs": true,
  "editor.stickyScroll.enabled": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  /******** Window ********/
  "workbench.colorTheme": "Default Dark+",
  "customWindowZoom.zoomLevelChangeValue": 0.25,
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.untitled.hint": "hidden",
  "window.newWindowDimensions": "inherit",
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.tabs.location": "right",
  "terminal.integrated.macOptionIsMeta": true,
  "extensions.ignoreRecommendations": true,
  /******** Formatting ********/
  // https://marketplace.visualstudio.com/items?itemName=tombonnike.vscode-status-bar-format-toggle
  "formattingToggle.affects": [
    "editor.formatOnSave"
  ],
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown]": {
    "editor.formatOnType": false
  },
  "[makefile]": {
    "editor.insertSpaces": false,
    "editor.detectIndentation": false
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "rome.rome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "rome.rome"
  },
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  /******** JavaScript ********/
  "javascript.validate.enable": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "rome.requireConfiguration": true,
  /******** TypeScript ********/
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  /******** Go ********/
  "go.useLanguageServer": true,
  "go.toolsGopath": "/Users/lgarron/Code/gopath",
  "go.toolsManagement.autoUpdate": true,
  /******** Remote SSH ********/
  "remote.SSH.useLocalServer": false,
  "remote.SSH.remotePlatform": {
    "Pythagoras": "macOS",
    "Pythagoras.web": "macOS",
    "Pythagoras.thunderbolt": "macOS"
  },
  "remote.SSH.serverInstallPath": {
    "Pythagoras": "~/.data/vscode-server",
    "Pythagoras.web": "~/.data/vscode-server",
    "Pythagoras.thunderbolt": "~/.data/vscode-server"
  },
  /******** Codespaces ********/
  "github.codespaces.createCodespaceInNewWindow": true,
  // The following is not necessarily specific to codespaces, but prevents a
  // confusing and useless warning in codespaces when working in a codebase that
  // ever has PRs from `main` to another branch (e.g. `production` or
  // `release`).
  "githubPullRequests.ignoredPullRequestBranches": [
    "main"
  ],
  /******** Live Share ********/
  "liveshare.showInStatusBar": "whileCollaborating",
  /******** Terminal ********/
  "terminal.integrated.defaultProfile.osx": "apple_fish",
  "terminal.integrated.defaultProfile.linux": "fish",
  "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
  "terminal.integrated.profiles.osx": {
    "apple_fish": {
      "path": "/usr/bin/env",
      "icon": "heart-filled",
      "overrideName": true,
      "args": [
        "fish",
        "-l"
      ]
    },
    "apple_fish_no_history": {
      "path": "/usr/bin/env",
      "icon": "heart",
      "overrideName": true,
      "args": [
        "fish",
        "-l",
        "--private"
      ]
    }
  },
  /******** GitLens ********/
  "gitlens.rebaseEditor.ordering": "asc",
  "githubPullRequests.pullBranch": "never",
  "workbench.editorAssociations": {
    "git-rebase-todo": "default"
  },
  /******** Python ********/
  "python.analysis.autoImportCompletions": true,
  "python.analysis.autoImportUserSymbols": true,
  "python.analysis.indexing": true,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  // This works around a bug with the Django template extension where it tries
  // to take over all HTML files in all repositories.
  "files.associations": {
    "*.html": "html"
  },
  /******** Rust ********/
  "rust-analyzer.check.command": "clippy",
  /******** Zig ********/
  "zig.zls.path": "/Users/lgarron/Library/Application Support/Code/User/globalStorage/ziglang.vscode-zig/zls_install/zls",
  /******** Markdown ********/
  "markdown.editor.pasteUrlAsFormattedLink.enabled": "smart",
  /******* Apply to all profiles *********/
  "workbench.settings.applyToAllProfiles": [
    /******** Dynamic ********/
    // "editor.formatOnSave",
    // "editor.formatOnPaste",
    // "window.zoomLevel",
    /******** Main VSCode settings ********/
    "editor.tabSize",
    "editor.renderWhitespace",
    "editor.formatOnType",
    "editor.columnSelection",
    "editor.inlineSuggest.enabled",
    "editor.suggest.showStatusBar",
    "editor.suggestSelection",
    "vsintellicode.modify.editor.suggestSelection",
    "files.insertFinalNewline",
    "explorer.fileNesting.enabled",
    "explorer.confirmDragAndDrop",
    "editor.guides.bracketPairs",
    "editor.stickyScroll.enabled",
    /******** Window ********/
    "workbench.colorTheme",
    "customWindowZoom.zoomLevelChangeValue",
    "workbench.sideBar.location",
    "workbench.startupEditor",
    "workbench.editor.untitled.hint",
    "window.newWindowDimensions",
    "terminal.integrated.tabs.enabled",
    "terminal.integrated.tabs.location",
    "terminal.integrated.macOptionIsMeta",
    "extensions.ignoreRecommendations",
    "editor.acceptSuggestionOnCommitCharacter",
    /******** Formatting ********/
    "formattingToggle.affects",
    "[json].editor.defaultFormatter",
    "[markdown].editor.formatOnType",
    "[makefile].editor.insertSpaces",
    "[makefile].editor.detectIndentation",
    "[html].editor.defaultFormatter",
    "[javascript].editor.defaultFormatter",
    "[typescript].editor.defaultFormatter",
    "[python].editor.codeActionsOnSave",
    /******** JavaScript ********/
    "source.organizeImports",
    "editor.defaultFormatter",
    "javascript.validate.enable",
    /******** TypeScript ********/
    "javascript.updateImportsOnFileMove.enabled",
    "rome.requireConfiguration",
    "typescript.updateImportsOnFileMove.enabled",
    "typescript.inlayHints.enumMemberValues.enabled",
    "typescript.inlayHints.functionLikeReturnTypes.enabled",
    "typescript.inlayHints.propertyDeclarationTypes.enabled",
    "typescript.inlayHints.parameterTypes.enabled",
    "typescript.inlayHints.variableTypes.enabled",
    /******** Go ********/
    "go.useLanguageServer",
    "go.toolsGopath",
    "go.toolsManagement.autoUpdate",
    /******** Remote SSH ********/
    "remote.SSH.useLocalServer",
    "remote.SSH.remotePlatform",
    "remote.SSH.serverInstallPath",
    /******** Codespaces ********/
    "github.codespaces.createCodespaceInNewWindow",
    "githubPullRequests.ignoredPullRequestBranches",
    /******** Live Share ********/
    "liveshare.showInStatusBar",
    /******** Terminal ********/
    // "terminal.integrated.defaultProfile.linux",
    // "terminal.integrated.defaultProfile.osx",
    "terminal.integrated.defaultProfile.windows",
    "terminal.integrated.profiles.osx",
    /******** GitLens ********/
    "gitlens.rebaseEditor.ordering",
    "githubPullRequests.pullBranch",
    "workbench.editorAssociations",
    /******** Python ********/
    "python.analysis.autoImportCompletions",
    "python.analysis.autoImportUserSymbols",
    "python.analysis.indexing",
    /******** Rust ********/
    "terminal.integrated.enableMultiLinePasteWarning",
    "files.associations",
    "rust-analyzer.check.command",
    /******** Zig ********/
    "zig.zls.path",
    /******** Markdown ********/
    "markdown.editor.pasteUrlAsFormattedLink.enabled",
    /******* Apply to all profiles *********/
    "workbench.settings.applyToAllProfiles"
  ],
  /****************/
}
