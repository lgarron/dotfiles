{
  /******** Dynamic ********/
  "editor.formatOnSave": true,
  "window.zoomLevel": 3,
  /******** Main VSCode settings ********/
  "editor.formatOnPaste": false,
  "editor.tabSize": 2,
  "editor.renderWhitespace": "boundary",
  "editor.formatOnType": false,
  "editor.columnSelection": false,
  "editor.inlineSuggest.enabled": true,
  "editor.suggest.showStatusBar": true,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "files.insertFinalNewline": true,
  "explorer.fileNesting.enabled": true,
  "explorer.confirmDragAndDrop": false,
  "editor.guides.bracketPairs": true,
  "editor.stickyScroll.enabled": true,
  "workbench.experimental.settingsProfiles.enabled": true,
  /******** Window ********/
  "customWindowZoom.zoomLevelChangeValue": 0.25,
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.untitled.hint": "hidden",
  "window.newWindowDimensions": "inherit",
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.tabs.location": "right",
  "terminal.integrated.macOptionIsMeta": true,
  "extensions.ignoreRecommendations": true,
  /******** Formatting ********/
  // https://marketplace.visualstudio.com/items?itemName=tombonnike.vscode-status-bar-format-toggle
  "formattingToggle.affects": [
    "editor.formatOnSave"
  ],
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown]": {
    "editor.formatOnType": false
  },
  "[makefile]": {
    "editor.insertSpaces": false,
    "editor.detectIndentation": false
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "rome.rome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "rome.rome"
  },
  /******** JavaScript ********/
  "javascript.validate.enable": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  /******** TypeScript ********/
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  /******** Go ********/
  "go.useLanguageServer": true,
  "go.toolsGopath": "/Users/lgarron/Code/gopath",
  "go.toolsManagement.autoUpdate": true,
  /******** Remote SSH ********/
  "remote.SSH.useLocalServer": false,
  "remote.SSH.remotePlatform": {
    "Minitemp2.local": "macOS"
  },
  /******** Codespaces ********/
  "github.codespaces.createCodespaceInNewWindow": true,
  /******** Live Share ********/
  "liveshare.showInStatusBar": "whileCollaborating",
  /******** Terminal ********/
  "terminal.integrated.defaultProfile.linux": "fish",
  "terminal.integrated.defaultProfile.osx": "apple_fish",
  "terminal.integrated.profiles.osx": {
    "apple_fish": {
      "path": "/usr/bin/env",
      "args": [
        "fish",
        "-l"
      ]
    },
    "apple_fish_no_history": {
      "path": "/usr/bin/env",
      "args": [
        "fish",
        "-l",
        "--private"
      ]
    }
  },
  /******** Windows (OS) ********/
  "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
  /******** GitLens ********/
  "gitlens.rebaseEditor.ordering": "asc",
  "githubPullRequests.pullBranch": "never",
  "workbench.editorAssociations": {
    "git-rebase-todo": "default"
  }
}
