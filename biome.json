{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "include": [
      "./.config/**/*.ts",
      "./scripts/**/*.ts",
      "./scripts/**/*.json"
    ],
    "ignore": ["./.temp", "./dotfiles/vscode/**/*"]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noAssignInExpressions": "off"
      },
      "correctness": {
        "noUnusedImports": "error"
      }
    }
  }
}
