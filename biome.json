{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["./node_modules/@cubing/dev-config/biome/biome.json"],
  "files": {
    "includes": [
      "**",
      "!.temp",
      "!dotfiles/vscode/**/*",
      "!exported",
      "!mirrored/vscode-settings-macos/files"
    ]
  },
  "linter": {
    "rules": {
      "nursery": {
        "noFloatingPromises": "error"
      },
      "suspicious": {
        "useAwait": "error"
      }
    }
  }
}
